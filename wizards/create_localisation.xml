<openerp>
    <data>
        <record id="create_localisation_form" model="ir.ui.view">
            <field name="name">craete localisation wizard</field>
            <field name="model">create.localisation</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>

                        <footer>
                            <button name="create_localisation" string="Create" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondery" spacial="cancel"/>
                        </footer>

                    </group>
                </form>
            </field>
        </record>

        <record id="create_localisation_wizard" model="ir.actions.act_window">
            <field name="name">create localisation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.localisation</field>
            <field name="res_mode">form</field>
            <field name="view_id" ref="create_localisation_form"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>